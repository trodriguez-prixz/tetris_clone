{
  "name": "tetris-clone",
  "version": "1.0.0",
  "description": "Tetris clone implemented with Phaser 3",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "build:electron": "electron-builder",
    "build:electron:mac": "electron-builder --mac",
    "build:electron:linux": "electron-builder --linux",
    "electron": "electron ."
  },
  "keywords": ["tetris", "phaser", "game"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "phaser": "^3.80.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.tetris.clone",
    "productName": "Tetris Clone",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.games",
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}

